    <!--
    to run unit tests with clover code coverage:
    mvn clean clover2:setup test clover2:aggregate clover2:clover -o
    '5m46s
    target/site/clover/clover.xml
    target/site/clover/* (html site)
    
    to run metrics (targets dom project only):
    mvn clean verify -P metrics-on -o
    '1m42s
    dom/target/checkstyle-result.xml
    dom/target/findBugs.xml and dom/target/findBugsXml.xml
    dom/target/pmd.xml

    to build webapp:
    mvn clean install -DskipTests -o
    
    -->

    <groupId>org.estatio</groupId>
    <artifactId>estatio</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Estatio Management System</name>
