        <danhaywood-isis-wicket-fullcalendar.version>1.2.0</danhaywood-isis-wicket-fullcalendar.version>
        <danhaywood-isis-wicket-fullcalendar2.version>1.3.0-SNAPSHOT</danhaywood-isis-wicket-fullcalendar2.version>
